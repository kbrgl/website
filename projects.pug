h1(class="text-5xl mt-24 font-title font-black") Projects
div(class="mt-8 grid md:grid-cols-2 gap-8")
    each project in projects
        section(class="flex flex-col relative space-y-6 items-start p-8 border rounded-xl bg-white dark:bg-zinc-800")
            a(href=project.link)
                img(class="rounded-xl", src=`/projects/${project.image}`, width="150")
            article(class="space-y-1")
                a(href=project.link)
                    h2(class="font-title font-bold text-lg hover:text-amber-500 hover:dark:text-yellow-500 transition-colors") #{project.name} â†— #[span(class="font-sans text-gray-400 dark:text-zinc-500 text-sm pl-2 font-normal")= project.date.split(' ')[2]]
                p(class="text-gray-500 dark:text-zinc-400")= project.description